@using PublicTransport.Core.Models.Lines
@model LineEditFormModel

@{
    ViewData["Title"] = "Редактирай линия";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">Редактиране на линия</h3>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Редактирай номера на линията">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-9">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" placeholder="Редактирай краткото описание на линията">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <a asp-controller="Lines" asp-action="All" class="btn btn-secondary">Отказ</a>
                    <button type="submit" class="btn btn-warning float-right">Редактирай</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}