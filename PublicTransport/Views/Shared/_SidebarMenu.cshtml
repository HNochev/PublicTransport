@using PublicTransport.Core.Constants

@if (this.User.IsInRole(UserConstants.Administrator))
{
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
    <a href="/" class="brand-link">
            <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">Админ панел</span>
        </a>

        <!-- Sidebar -->
    <div class="sidebar">
            <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a class="d-block text-center">Добре дошли в <br>администраторския панел, <br><b>@this.User.Identity?.Name</b></a>
                </div>
            </div>

            <!-- Sidebar Menu -->
        <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->
                <li class="nav-header">Опции</li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="News" asp-action="Add" class="nav-link">
                            <i class="nav-icon far fa-calendar-alt"></i>
                            <p>
                                Добави новина
                                <span class="badge badge-info right"></span>
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Vehicles" asp-action="Add" class="nav-link">
                            <i class="nav-icon fas fa-bus"></i>
                            <p>
                                Добави тролейбус
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Admin" asp-action="ApprovePhotos" class="nav-link">
                            <i class="nav-icon far fa-image"></i>
                            <p>
                                Снимки за одобряване
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Contacts" asp-action="Add" class="nav-link">
                            <i class="nav-icon far fa-address-card"></i>
                            <p>
                                Добавяне на контакти
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Downloads" asp-action="AddPDF" class="nav-link">
                            <i class="nav-icon fas fa-file-pdf"></i>
                            <p>
                                Добавяне на PDF
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Lines" asp-action="AddLine" class="nav-link">
                            <i class="nav-icon fas fa-road"></i>
                            <p>
                                Добавяне на линия
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Lines" asp-action="AddStop" class="nav-link">
                            <i class="nav-icon fas fa-sign"></i>
                            <p>
                                Добавяне на спирка
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Lines" asp-action="AllCreatedStops" class="nav-link">
                            <i class="nav-icon fas fa-trash-alt"></i>
                            <p>
                                Премахване на спирка
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="RoleManage" asp-controller="UserRole" asp-action="ManageUsers" class="nav-link">
                            <i class="nav-icon fas fa-user-cog"></i>
                            <p>
                                Управление на роли
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
    </div>
        <!-- /.sidebar -->
</aside>
}