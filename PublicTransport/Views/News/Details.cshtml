@using PublicTransport.Core.Constants

@{
    ViewBag.Title = @Model.Title;
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="product-title"><a asp-controller="News" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a></h3>
            </div>
            <div class="card-body">
                <article>
                    <header class="entry-header">
                        <meta http-equiv="Content-Type" content="text/html; charset=windows-1251">
                        <div class="entry-thumbnail">
                            <img class="img-fluid" src="@Model.ImgUrl" alt="Снимка">
                        </div>
                        <b class="entry-date right">Публикувана на: @Model.Date.ToString("D")</b>
                    </header>
                    <div class="entry-content">
                        <p class="short-content">
                            @Model.Description
                        </p>
                        <h4>Автор: @Model.Author.UserName</h4>
                    </div>
                    <a asp-controller="News" asp-action="AddComment" asp-route-id="@Model.Id" class="btn btn-primary text-center">Напиши коментар</a>
                    @if (this.User.IsInRole(UserConstants.Administrator))
                    {
                        <a asp-controller="News" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning float-right">Редактирай</a>
                        <a asp-controller="News" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger float-right">Изтрий</a>
                    }
                </article>
            </div>
        </div>
    </div>
    <div class="col-md-12 text-center">
    </div>
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-comments"></i>
                    Всички Коментари <b>@Model.NewsComments.Count</b>
                </h3>
            </div>
            @if (Model.NewsComments.Count == 0)
            {
                <h2 class="text-center">Няма коментари!</h2>
            }
            else
            {
                @foreach (var comment in Model.NewsComments)
                {
                    <div>
                        <blockquote>
                            <small>Автор: <cite title="Source Title">@comment.User.UserName</cite></small>
                            <p>@comment.Content</p>
                            <small>Дата: <cite title="Source Title">@comment.Date.ToString("f")</cite></small>
                        </blockquote>
                    </div>
                }
            }
        </div>
    </div>

</div>